<Window x:Class="VoaDownloaderWpf.VocabBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoaDownloaderWpf"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="我的生词本" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="10" Margin="0,0,0,10">
            <CheckBox Content="显示已学会的单词" IsChecked="{Binding ShowLearned}" VerticalAlignment="Center"/>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding VocabEntries}"
                  Style="{StaticResource ModernDataGridStyle}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.Header>
                        <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding DataContext.SelectionChangedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="状态" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="✓ 已学会" Foreground="Green" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.8">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLearned}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="单词" Binding="{Binding Word}" Width="*"/>
                <DataGridTextColumn Header="释义" Binding="{Binding Definition}" Width="3*"/>
                <DataGridTextColumn Header="学习次数" Binding="{Binding LookupCount}" Width="Auto"/>
                <DataGridTextColumn Header="添加日期" Binding="{Binding DateAdded, StringFormat='yyyy-MM-dd'}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="{StaticResource ContentBackgroundBrush}" Padding="10" Margin="0,10,0,0"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="标记为“已学会”" Command="{Binding MarkSelectedAsLearnedCommand}" Style="{StaticResource PrimaryButtonStyle}"
                        Visibility="{Binding ShowLearned, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                <Button Content="标记为“未学会”" Command="{Binding MarkSelectedAsForgottenCommand}" Style="{StaticResource PrimaryButtonStyle}"
                        Visibility="{Binding ShowLearned, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="彻底删除" Command="{Binding DeleteSelectedCommand}" Style="{StaticResource ActionButtonStyle}" 
                        Background="Crimson" Foreground="White" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>